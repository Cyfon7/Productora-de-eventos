<h1 class="title_table">Crews</h1>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Group</th>
            <th colspan="3"></th>
        </tr>
    </thead>

    <tbody>
        <% @crews.each do |crew| %>
            <tr>
                <td><%= crew.name %></td>
                <td><%= crew.group %></td>
                <td><%= link_to 'Show', group_crew_path(@group, crew) %></td>
                <td><%= link_to 'Edit', edit_group_crew_path(@group, crew) %></td>
                <td><%= link_to 'Destroy', group_crew_path(@group, crew), method: :delete, data: { confirm: 'Are you sure? '} %></td>
            </tr>
        <% end %>
    </tbody>
</table>

<%= link_to 'New Crew', new_group_crew_path(@group), class: 'btn btn-primary' %>
<%= link_to 'Return to Groups', groups_path, class: 'btn btn-primary' %>
<%= link_to 'Back', group_path(@group), class: 'btn btn-primary'%>
